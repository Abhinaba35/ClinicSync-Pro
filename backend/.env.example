# Flask Secret Key - Change this to a random string in production
SECRET_KEY=dev_secret_key_change_in_production_use_random_string_here

# Database Configuration
# For PostgreSQL (Production):
# DATABASE_URL=postgresql://username:password@localhost:5432/healthcare_db
# For SQLite (Development - default):
DATABASE_URL=sqlite:///app.db

# JWT Configuration (uses SECRET_KEY if not set separately)
# JWT_SECRET_KEY=your-jwt-secret-key

# Email Configuration (Flask-Mail)
# For Gmail, you need to use an App Password (not your regular password)
# Enable 2FA and generate App Password: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# OpenAI API Configuration (Optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True
